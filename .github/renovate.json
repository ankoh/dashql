{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": ["config:recommended"],
    "timezone": "Europe/Berlin",
    "baseBranches": ["main"],
    "rangeStrategy": "bump",
    "automergeStrategy": "rebase",
    "postUpdateOptions": ["yarnDedupeFewer"],
    "labels": ["dependencies"],
    "npm": {
        "labels": ["javascript", "dependencies"]
    },
    "packageRules": [
        {
            "groupName": "react-zoom-pan-pinch",
            "matchPackageNames": ["react-zoom-pan-pinch"],
            "enabled": false
        },
        {
            "groupName": "flatbuffers",
            "matchPackageNames": ["flatbuffers"],
            "automerge": true
        },
        {
            "groupName": "esbuild",
            "matchPackageNames": ["esbuild"],
            "automerge": true
        },
        {
            "groupName": "webpack",
            "matchPackagePatterns": ["^webpack", "^webpack-.*"],
            "automerge": true
        },
        {
            "groupName": "jest",
            "matchPackageNames": ["@types/jest"],
            "matchPackagePatterns": [".*jest.*"],
            "automerge": true
        },
        {
            "groupName": "linter",
            "matchPackagePatterns": [".*eslint.*"],
            "automerge": true
        },
        {
            "groupName": "type definitions",
            "matchPackagePatterns": ["^@types/.*"],
            "excludePackagePatterns": ["^@types/react.*"],
            "automerge": true
        },
        {
            "groupName": "vscode",
            "matchPackageNames": [
                "vscode",
                "@vscode/vsce",
                "vscode-languageserver",
                "vscode-languageclient"
            ],
            "automerge": true
        }
    ]
}
