{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "timezone": "Europe/Berlin",
    "baseBranches": [
        "main"
    ],
    "rangeStrategy": "bump",
    "automergeStrategy": "rebase",
    "postUpdateOptions": [
        "yarnDedupeFewer"
    ],
    "labels": [
        "dependencies"
    ],
    "npm": {
        "labels": [
            "dependencies",
            "javascript"
        ]
    },
    "cargo": {
        "labels": [
            "dependencies",
            "rust"
        ]
    },
    "packageRules": [
        {
            "groupName": "flatbuffers",
            "matchPackageNames": [
                "flatbuffers"
            ],
            "automerge": true
        },
        {
            "groupName": "esbuild",
            "matchPackageNames": [
                "esbuild"
            ],
            "automerge": true
        },
        {
            "groupName": "webpack",
            "matchPackagePatterns": [
                "^webpack",
                "^webpack-.*"
            ],
            "automerge": true
        },
        {
            "groupName": "jest",
            "matchPackageNames": [
                "@types/jest"
            ],
            "matchPackagePatterns": [
                ".*jest.*"
            ],
            "automerge": true
        },
        {
            "groupName": "linter",
            "matchPackagePatterns": [
                ".*eslint.*"
            ],
            "automerge": true
        },
        {
            "groupName": "type definitions",
            "matchPackagePatterns": [
                "^@types/.*"
            ],
            "excludePackagePatterns": [
                "^@types/react.*"
            ],
            "automerge": true
        },
        {
            "groupName": "vscode",
            "matchPackageNames": [
                "vscode",
                "@vscode/vsce",
                "vscode-languageserver",
                "vscode-languageclient"
            ],
            "automerge": true
        },
        {
            "groupName": "connectrpc",
            "matchPackagePatterns": [
                "^@connectrpc/.*"
            ],
            "automerge": false
        },
        {
            "groupName": "tauri",
            "matchPackageNames": [
                "@tauri-apps/cli",
                "tauri",
                "tauri-build"
            ],
            "matchPackagePatterns": [
                "^tauri-plugin-*"
            ],
            "automerge": false
        }
    ]
}
