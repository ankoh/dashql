{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": ["config:recommended"],
    "timezone": "Europe/Berlin",
    "baseBranches": ["main"],
    "rangeStrategy": "bump",
    "automergeStrategy": "rebase",
    "postUpdateOptions": ["yarnDedupeFewer"],
    "labels": ["dependencies"],
    "npm": {
        "labels": ["javascript", "dependencies"]
    },
    "packageRules": [
        {
            "description": "Flatbuffers",
            "matchPackageNames": ["flatbuffers"],
            "automerge": true
        },
        {
            "description": "Js build tools",
            "matchPackageNames": ["esbuild"],
            "automerge": true
        },
        {
            "description": "Webpack updates",
            "matchPackagePatterns": ["^webpack", "^webpack-.*"],
            "automerge": true
        },
        {
            "description": "Typescript updates",
            "matchPackagePatterns": ["^typescript.*", "^ts-jest.*"],
            "automerge": true
        },
        {
            "description": "Jest updates",
            "matchPackagePatterns": [".*jest.*"],
            "automerge": true
        },
        {
            "description": "Linter updates",
            "matchPackagePatterns": [".*eslint.*"],
            "automerge": true
        },
        {
            "description": "Type definition updates",
            "matchPackagePatterns": ["^@types/.*"],
            "automerge": true
        }
    ]
}
