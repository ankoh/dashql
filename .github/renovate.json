{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        ":dependencyDashboard",
        ":ignoreModulesAndTests",
        ":semanticPrefixFixDepsChoreOthers",
        ":preserveSemverRanges",
        "group:monorepos",
        "group:recommended",
        "replacements:all",
        "workarounds:all"
    ],
    "timezone": "Europe/Berlin",
    "baseBranches": ["main"],
    "rangeStrategy": "bump",
    "automergeStrategy": "rebase",
    "postUpdateOptions": ["yarnDedupeFewer"],
    "labels": ["dependencies"],
    "npm": {
        "labels": ["javascript", "dependencies"]
    },
    "packageRules": [
        {
            "description": "Automerge minor updates of widely used libraries",
            "matchPackageNames": ["esbuild", "jest", "ts-jest", "typescript"],
            "matchUpdateTypes": ["minor"],
            "matchDepTypes": ["devDependencies"],
            "automerge": true
        },
        {
            "description": "Automerge uncritical dev dependencies",
            "matchPackagePatterns": ["^eslint"],
            "depTypeList": ["devDependencies"],
            "groupName": "Eslint",
            "automerge": true
        },
        {
            "description": "Automerge webpack updates",
            "matchPackagePatterns": ["^webpack"],
            "groupName": "Webpack",
            "automerge": true
        },
        {
            "description": "Automerge typescript updates",
            "matchPackagePatterns": ["^typescript"],
            "groupName": "Typescript",
            "automerge": true
        },
        {
            "description": "Automerge type updates",
            "matchPackagePatterns": ["^@types/"],
            "groupName": "Type Definitions",
            "automerge": true
        }
    ]
}
