{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": ["config:recommended", ":preserveSemverRanges"],
    "timezone": "Europe/Berlin",
    "baseBranches": ["main"],
    "rangeStrategy": "bump",
    "automergeStrategy": "rebase",
    "postUpdateOptions": ["yarnDedupeFewer"],
    "labels": ["dependencies"],
    "npm": {
        "labels": ["javascript", "dependencies"]
    },
    "packageRules": [
        {
            "description": "Automerge linter updates",
            "matchDepPatterns": [".*eslint.*"],
            "depTypeList": ["devDependencies"],
            "groupName": "linter",
            "automerge": true
        },
        {
            "description": "Automerge webpack updates",
            "matchDepPatterns": [".*webpack.*"],
            "depTypeList": ["devDependencies"],
            "groupName": "webpack",
            "automerge": true
        },
        {
            "description": "Automerge typescript updates",
            "matchDepPatterns": [".*typescript.*"],
            "depTypeList": ["devDependencies"],
            "groupName": "typescript",
            "automerge": true
        },
        {
            "description": "Automerge type definition updates",
            "matchDepPatterns": ["^@types/"],
            "depTypeList": ["devDependencies"],
            "groupName": "type definitions",
            "automerge": true
        }
    ]
}
