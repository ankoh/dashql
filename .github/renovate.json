{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": ["config:recommended"],
    "timezone": "Europe/Berlin",
    "baseBranches": ["main"],
    "rangeStrategy": "bump",
    "automergeStrategy": "rebase",
    "postUpdateOptions": ["yarnDedupeFewer"],
    "labels": ["dependencies"],
    "npm": {
        "labels": ["javascript", "dependencies"]
    },
    "packageRules": [
        {
            "groupName": "Flatbuffers",
            "matchPackageNames": ["flatbuffers"],
            "automerge": true
        },
        {
            "groupName": "Esbuild",
            "matchPackageNames": ["esbuild"],
            "automerge": true
        },
        {
            "groupName": "Webpack",
            "matchPackagePatterns": ["^webpack", "^webpack-.*"],
            "automerge": true
        },
        {
            "groupName": "Jest",
            "matchPackageNames": ["@types/jest"],
            "matchPackagePatterns": [".*jest.*"],
            "automerge": true
        },
        {
            "groupName": "Linter",
            "matchPackagePatterns": [".*eslint.*"],
            "automerge": true
        },
        {
            "groupName": "Type definitions",
            "matchPackagePatterns": ["^@types/.*"],
            "excludePackagePatterns": ["^@types/react.*"],
            "automerge": true
        }
    ]
}
