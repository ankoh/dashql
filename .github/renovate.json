{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        ":dependencyDashboard",
        ":ignoreModulesAndTests",
        ":semanticPrefixFixDepsChoreOthers",
        ":preserveSemverRanges",
        "group:monorepos",
        "group:recommended",
        "replacements:all",
        "workarounds:all"
    ],
    "timezone": "Europe/Berlin",
    "baseBranches": ["main"],
    "rangeStrategy": "bump",
    "automergeStrategy": "rebase",
    "postUpdateOptions": ["yarnDedupeFewer"],
    "labels": ["dependencies"],
    "npm": {
        "labels": ["javascript", "dependencies"]
    },
    "packageRules": [
        {
            "description": "Automerge linter updates",
            "matchPackagePatterns": [".*eslint.*"],
            "depTypeList": ["devDependencies"],
            "groupName": "linter",
            "automerge": true
        },
        {
            "description": "Automerge webpack updates",
            "matchPackagePatterns": [".*webpack.*"],
            "depTypeList": ["devDependencies"],
            "groupName": "webpack",
            "automerge": true
        },
        {
            "description": "Automerge typescript updates",
            "matchPackagePatterns": [".*typescript.*"],
            "depTypeList": ["devDependencies"],
            "groupName": "typescript",
            "automerge": true
        },
        {
            "description": "Automerge type definition updates",
            "matchPackagePatterns": ["^@types/"],
            "depTypeList": ["devDependencies"],
            "groupName": "type definitions",
            "automerge": true
        }
    ]
}
