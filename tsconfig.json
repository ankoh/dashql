{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "sourceMap": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "downlevelIteration": true,
        "isolatedModules": true,
        "strict": true,
        "jsx": "react",
        "skipLibCheck": true,
        "types": [
            "node",
            "jest"
        ],
        "lib": [
            "es6",
            "es2020",
            "dom"
        ]
    }
}
