{
    "$schema": "../gen/schemas/desktop-schema.json",
    "identifier": "run-app",
    "description": "permissions to run the app",
    "windows": [
        "main",
        "main-*"
    ],
    "permissions": [
        "window:allow-start-dragging",
        "updater:allow-check",
        "updater:allow-download-and-install",
        "deep-link:default",
        "window:allow-set-shadow"
    ],
    "platforms": [
        "linux",
        "macOS",
        "windows"
    ]
}
