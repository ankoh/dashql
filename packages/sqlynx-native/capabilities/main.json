{
    "$schema": "../gen/schemas/desktop-schema.json",
    "identifier": "main-capabilities",
    "description": "permissions to run the app",
    "windows": [
        "main",
        "main-*"
    ],
    "permissions": [
        "app:default",
        "deep-link:default",
        "event:default",
        "log:allow-log",
        "log:default",
        "menu:default",
        "os:allow-arch",
        "os:allow-hostname",
        "os:allow-os-type",
        "resources:default",
        "shell:allow-open",
        "tray:default",
        "updater:allow-check",
        "updater:allow-download-and-install",
        "webview:default",
        "window:allow-set-shadow",
        "window:allow-start-dragging",
        "window:default"
    ],
    "platforms": [
        "linux",
        "macOS",
        "windows"
    ]
}
