{
    "compilerOptions": {
        "outDir": "./dist/",
        "baseUrl": ".",
        "target": "es2020",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "declarationDir": "./dist",
        "noImplicitAny": true,
        "esModuleInterop": false,
        "lib": [
            "es6",
            "dom"
        ],
        "types": [
            "node",
            "jest"
        ],
        "paths": {
            "flatbuffers": [
                "../../node_modules/flatbuffers/js/flatbuffers.mjs"
            ]
        }
    },
    "include": [
        "./src/**/*.ts"
    ],
    "ts-node": {
        "compilerOptions": {
            "target": "es2022",
            "module": "es2022"
        },
        "experimentalSpecifierResolution": "node"
    }
}
