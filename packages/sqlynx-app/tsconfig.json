{
    "compilerOptions": {
        "baseUrl": "./src",
        "outDir": "./build/ts/",
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "sourceMap": true,
        "noImplicitAny": true,
        "esModuleInterop": false,
        "downlevelIteration": true,
        "strict": true,
        "jsx": "react",
        "types": [
            "node",
            "jest"
        ],
        "plugins": [
            {
                "name": "typescript-plugin-css-modules"
            }
        ],
        "lib": [
            "es6",
            "es2020",
            "dom"
        ]
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "*.ts",
        "src/**/*",
        "test/**/*.ts",
        "types/*.d.ts"
    ]
}
