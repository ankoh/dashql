{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "baseUrl": "./src",
        "outDir": "./build/ts/",
        "types": [
            "node",
            "jest"
        ],
        "plugins": [
            {
                "name": "typescript-plugin-css-modules"
            }
        ],
        "allowJs": true
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "*.ts",
        "bundles/*.ts",
        "src/**/*",
        "test/**/*.ts",
        "types/*.d.ts"
    ]
}
